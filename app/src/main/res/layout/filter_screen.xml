<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_filter_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <ListView
                android:id="@+id/lv_filter_screen_filter_types"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/list_bg"
                android:divider="@color/list_divider"
                android:dividerHeight="1dp"></ListView>

            <ListView
                android:id="@+id/lv_filter_screen_filter_type_items"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:dividerHeight="0dp"
                android:paddingLeft="5dp"></ListView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_filter_screen_apply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignBottom="@+id/ll_filter_screen"
            android:background="@color/btn_apply_filter"
            android:clickable="true"
            android:textColor="@color/white"
            android:text="@string/apply_filter_text"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </RelativeLayout>

</LinearLayout>